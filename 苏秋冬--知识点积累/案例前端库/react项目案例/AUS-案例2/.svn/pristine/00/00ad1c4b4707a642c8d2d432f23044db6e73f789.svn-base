/**
 * 【成功】消息弹窗
 * @param text
 */
function success(text) {
    window.noty({
        text: '<div class="activity-item"> <i class="fa fa-check-circle text-success"></i> <div class="activity">' + text + '</div> </div>',
        type: 'success',
        timeout: 3000,
        dismissQueue: true,
        layout: 'bottomRight',
        closeWith: ['button'],
        theme: 'relax',
        maxVisible: 1,
        animation: {
            open: 'animated bounceInRight',
            close: 'animated bounceOutRight',
            easing: 'swing',
            speed: 500
        }
    });
}

